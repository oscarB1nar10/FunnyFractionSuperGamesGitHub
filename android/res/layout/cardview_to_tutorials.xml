<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="9"


    android:layout_gravity="center_horizontal">
    <!-- A CardView that contains a TextView -->

<android.support.v7.widget.CardView
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_view"
android:layout_gravity="center"
android:layout_width="match_parent"
android:layout_height="match_parent"
card_view:cardCornerRadius="20dp">



    <RelativeLayout
        android:id="@+id/cover_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/sheet">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="9">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">
        <TextView
            android:id="@+id/txv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtQueson"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/homecolor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="70dp"
                android:layout_marginTop="26dp"
                app:srcCompat="@drawable/homecolor" />

        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5">

        <ImageView
            android:id="@+id/img_example1"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp" />

                <TextView
                    android:id="@+id/txv_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toEndOf="@+id/img_example1"
                    android:text="@string/txtdefinicion"
                    android:textSize="19sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

        <ImageView
            android:id="@+id/optionalImg"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_marginStart="200dp"
            android:layout_marginBottom="10dp"/>

            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
    </LinearLayout>