<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"


    android:layout_gravity="center_horizontal">
    <!-- A CardView that contains a TextView -->

<android.support.v7.widget.CardView
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_view"
android:layout_gravity="center"
android:layout_width="match_parent"
android:layout_height="match_parent"
card_view:cardCornerRadius="20dp">



    <RelativeLayout
        android:id="@+id/cover_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/sheet">

        <TextView
            android:id="@+id/txv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtQueson"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/img_example1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_below="@+id/txv_title"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txv_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txv_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/img_example1"
            android:text="@string/txtdefinicion"
            android:textSize="19sp" />
        <ImageView
            android:id="@+id/optionalImg"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_below="@+id/txv_information"
            android:layout_marginTop="20dp"
            android:layout_marginStart="200dp"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
    </LinearLayout>