<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/how_want_be_a_mellionary_menu_background">

    <ImageButton
        android:id="@+id/btn_exit_menu_millionary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="95dp"
        android:background="#00ffffff"
        android:src="@drawable/exit_millonary" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_millionary_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/how_want_be_a_mellionary_icon" />

        <ProgressBar
            android:id="@+id/pgb_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/login_color2"
            android:indeterminateTint="@color/opacque"
            android:progressBackgroundTint="@color/login_color2"
            android:layout_marginRight="10dp"/>

</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="#210566">

        <Button
            android:id="@+id/btn_instrucciones_evaluation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txtinstrucciones"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:background="@drawable/how_want_be_a_mellionary_button"/>
        <Button
            android:enabled="false"
            android:id="@+id/btn_play_evaluation"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="@string/txtjugar"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/how_want_be_a_mellionary_button"/>
        <Button
            android:id="@+id/btn_settings_evaluation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txtsonido"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:background="@drawable/how_want_be_a_mellionary_button"/>
    </LinearLayout>

</LinearLayout>