<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo4"
    android:backgroundTintMode="screen"
    tools:layout_editor_absoluteY="73dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/configurar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="banderasVisibles"
            android:src="@drawable/settings" />

        <ImageView
            android:id="@+id/logeo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/configurar"
            android:layout_alignParentTop="true"
            android:layout_marginRight="-560dp"
            android:src="@drawable/login" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/englishH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparente"
        android:onClick="idioma"
        android:src="@drawable/english"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/espanolH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparente"
        android:onClick="idioma"
        android:src="@drawable/spanish"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_logeo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#65E538"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/logonicolas"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btntuto"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tutoriales" />

            <Button
                android:id="@+id/btnprac"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/practicas" />

            <Button
                android:id="@+id/btnevalu"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/evaluacion" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logonicolas"
            />



    </RelativeLayout>

</LinearLayout>